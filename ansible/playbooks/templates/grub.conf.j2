set timeout=30

loadfont unicode

set menu_color_normal=white/black
set menu_color_highlight=black/light-gray

menuentry "autoinstall http://{{ boot_server_ip }}/{{ machine_id }}/" {
        set gfxpayload=keep
        linux   /casper/vmlinuz autoinstall "ds=nocloud;s=http://{{ boot_server_ip }}/{{ machine_id }}/" ipv6.disable=1  ---
        initrd  /casper/initrd
}
